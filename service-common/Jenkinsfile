def initialize() {

  try {
    stage('build service-common') {
      sh '''cd service-common
      ./gradlew clean
      ./gradlew build -x test
      ./gradlew detekt'''
    }
  } catch (e) {
    echo "Build Failed"
    return currentBuild.result ?: 'FAILURE'
  } finally {
    publishHTML([allowmissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'service-common/build/reports/detekt', reportFiles: 'detekt.html', reportName: 'service-common-detekt-Report', reportTitles: ''])
  }

  try {
    stage('test service-common') {
      sh '''cd service-common
      ./gradlew test'''
    } 
  } catch (e) {
    echo "Test FAILED"
    return currentBuild.result ?: 'UNSTABLE'
  }
  return currentBuild.result ?: 'SUCCESS'
}

return this