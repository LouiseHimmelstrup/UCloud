def initialize() {
  try {
    stage('build ping-service') {
      sh '''cd ping-service
      ./gradlew clean
      ./gradlew build -x test'''
    }
  } catch (e) {
    echo "Build Failed"
    return currentBuild.result ?: 'FAILURE'
  } finally {
    publishHTML([allowmissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'ping-service/build/reports/detekt', reportFiles: 'detekt.html', reportName: 'ping-service-detekt-Report', reportTitles: ''])
  }
  try {
    stage('test ping-service') {
      sh '''cd ping-service
      ./gradlew test'''
    }
  } catch (e) {
    echo "Test FAILED"
    return 'UNSTABLE'
  }
  return 'SUCCESS'
}

return this
