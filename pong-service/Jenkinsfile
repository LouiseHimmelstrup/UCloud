def initialize() {
  try {
    stage('build pong-service') {
      sh '''cd pong-service
      ./gradlew clean
      ./gradlew build -x test'''
    }
  } catch (e) {
    echo "Build Failed"
    return currentBuild.result ?: 'FAILURE'
  } finally {
    publishHTML([allowmissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'pong-service/build/reports/detekt', reportFiles: 'detekt.html', reportName: 'pong-service-detekt-Report', reportTitles: ''])
  }
  try {
    stage('test pong-service') {
      sh '''cd pong-service
      ./gradlew test'''
    }
  } catch (e) {
    echo "Test FAILED"
    return 'UNSTABLE'
  }
  return 'SUCCESS'
}

return this
