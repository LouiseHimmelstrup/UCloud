{
  "settings": {
    "analysis": {
      "analyzer": {
        "path-tokenizer": {
          "type": "custom",
          "tokenizer": "path-tokenizer"
        }
      },
      "tokenizer": {
        "path-tokenizer": {
          "type": "path_hierarchy",
          "delimiter": "/"
        }
      }
    }
  },
  "mappings": {
    "doc": {
      "properties": {
        "path": {
          "type": "text",
          "analyzer": "path-tokenizer",
          "search_analyzer": "keyword"
        },

        "fileName": {
          "type": "text",
          "analyzer": "standard"
        },

        "fileDepth": {
          "type": "number"
        },

        "id": {
          "type": "text",
          "analyzer": "keyword",
          "search_analyzer": "keyword"
        },

        "fileType": {
          "type": "text",
          "analyzer": "keyword",
          "search_analyzer": "keyword"
        },

        "owner": {
          "type": "text",
          "analyzer": "keyword",
          "search_analyzer": "keyword"
        },

        "size": {
          "type": "number"
        },

        "fileTimestamps": {
          "type": "object"
        },

        "checksum": {
          "type": "object"
        },

        "isLink": {
          "type": "boolean"
        },

        "linkTarget": {
          "type": "text"
        },

        "linkTargetId": {
          "type": "text"
        },

        "sensitivity": {
          "type": "text",
          "analyzer": "keyword",
          "search_analyzer": "keyword"
        },

        "annotations": {
          "type": "object"
        }
      }
    }
  }
}