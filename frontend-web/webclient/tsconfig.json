{
    "compilerOptions": {
        "noImplicitReturns": true,
        "outDir": "./dist/",
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "module": "esnext",
        "target": "es2018",
        "jsx": "react",
        "pretty": true,
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./app/*"
            ]
        }
    }
}